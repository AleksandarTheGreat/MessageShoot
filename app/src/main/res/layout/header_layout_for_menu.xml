<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewCoverPhotoHeaderLayout"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="email"
            />

        <TextView
            android:id="@+id/textViewEmailHeaderLayout"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="someuser@gmail.com"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewNicknameLabel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="nickname"
            />

        <TextView
            android:id="@+id/textViewNicknameHeaderLayout"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="nickname123"
            android:gravity="end"
            />

    </LinearLayout>

</LinearLayout>