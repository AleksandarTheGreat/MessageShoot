<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfileImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="25dp"
        android:layout_gravity="top"
        android:layout_marginVertical="8dp"
        >

        <ImageView
            android:id="@+id/imageViewProfileCommentLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:background="@drawable/back_for_comment"
        >

        <TextView
            android:id="@+id/textViewEmailCommentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@gmail.com"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textViewContentCommentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Some text comment here description etc and whatelse"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textViewPostedAtCommentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="12sp"
            android:text="10.03.2025"
            />

    </LinearLayout>

</LinearLayout>